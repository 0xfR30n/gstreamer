static int
_wrap_gst_buffer__set_timestamp(PyGBoxed *self, PyObject *value, void *closure)
{
    gint val;

    val = PyInt_AsLong(value);
    if (PyErr_Occurred())
        return -1;
    
    pyg_boxed_get(self, GstBuffer)->timestamp = val;
    return 0;
}
